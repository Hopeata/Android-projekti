<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.virtualpostit"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".PostIt"
            android:label="@string/title_activity_post_it" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NoteActivity"
            android:label="@string/title_activity_note" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.virtualpostit.PostIt" />
        </activity>
        <activity
            android:name=".NoteEditActivity"
            android:label="@string/title_activity_note_edit" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.virtualpostit.NoteActivity" />
        </activity>
        <activity
            android:name=".GMapActivity"
            android:label="@string/title_activity_gmap" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.virtualpostit.PostIt" />
        </activity>

        <uses-library android:name="com.google.android.maps" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>